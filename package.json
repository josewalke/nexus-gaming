{
  "name": "nexus-gaming",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.17.0",
    "react": "^19.1.0",
    "react-datepicker": "^8.4.0",
    "react-dom": "^19.1.0",
    "react-helmet": "^6.1.0",
    "react-intersection-observer": "^9.16.0",
    "react-router-dom": "^6.21.3",
    "react-scripts": "5.0.1",
    "react-select": "^5.8.0",
    "three": "^0.177.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "cypress": "^13.6.0",
    "jest": "^29.7.0",
    "playwright": "^1.40.0",
    "source-map-explorer": "^2.5.3",
    "webpack-bundle-analyzer": "^4.10.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:prod": "GENERATE_SOURCEMAP=false react-scripts build",
    "build:analyze": "npm run build && npm run analyze-bundle",
    "test": "react-scripts test",
    "test:coverage": "npm test -- --coverage --watchAll=false",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:lighthouse": "lighthouse http://localhost:3000 --output=json --output-path=./lighthouse-report.json",
    "eject": "react-scripts eject",
    "analyze-bundle": "webpack-bundle-analyzer build/static/js/*.js",
    "analyze-source": "source-map-explorer 'build/static/js/*.js'",
    "predeploy": "npm run build:prod && npm run test:coverage",
    "deploy": "npm run predeploy && echo 'Deployment ready!'",
    "deploy:staging": "npm run build && npm run test:e2e",
    "deploy:production": "npm run build:prod && npm run test:coverage && npm run test:e2e",
    "clear-cache": "node clear-cache.js",
    "lighthouse:ci": "npm run build:prod && npx serve -s build -l 3000 & sleep 5 && npm run test:lighthouse && pkill -f serve",
    "performance:audit": "npm run lighthouse:ci && npm run analyze-bundle",
    "security:audit": "npm audit && npm audit fix",
    "type-check": "npx tsc --noEmit",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "check-all": "npm run lint && npm run type-check && npm run test:coverage"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
